package pl.coderslab.JavaExercisesDayTwoObjectOrientPrograming.Attributes;

public class Person {
    // Public attributes with default values
    public String name = "Stefan";
    public String surname = "Bajic";
    public int age = 34;
    public char gender = 'M'; // M for Male, F for Female

    // You can also add a constructor if needed
    public Person() {
        // Default constructor
    }
}